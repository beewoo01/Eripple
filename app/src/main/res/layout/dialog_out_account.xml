<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/bg_round_dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/applesdgothicneom"
            android:text="탈퇴하시겠습니까?"
            android:textColor="@color/defaultBlackTextColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/content_txv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/content_txv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탈퇴 시 적립된 포인트는 모두 사라집니다."
            android:textColor="@color/defaultGrayTextColor"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/cancel_txv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_txv" />

        <TextView
            android:id="@+id/cancel_txv"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/bg_cancel_btn"
            android:fontFamily="@font/applesdgothicneob"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ok_txv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/content_txv" />


        <TextView
            android:id="@+id/ok_txv"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_8dp_maincolor"
            android:fontFamily="@font/applesdgothicneob"
            android:gravity="center"
            android:text="@string/check"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/cancel_txv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cancel_txv"
            app:layout_constraintTop_toTopOf="@id/cancel_txv" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
