<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".screen.account.join.termsofuse.TermsOfUseActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="?attr/toolbarWithArrowButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/title_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/applesdgothicneob"
                android:includeFontPadding="false"
                android:text="@string/join"
                android:textColor="@color/black"
                android:textSize="17sp" />

        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:id="@+id/top_txv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/applesdgothicneol"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="@string/plz_agree"
            android:textColor="@color/defaultBlackTextColor"
            app:drawableStartCompat="@drawable/ic_join_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />


        <View
            android:id="@+id/allAgree_container"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_txv" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/allAgreeCheckBox"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_turms_of_use_checkbox"
            android:clickable="false"
            android:drawableStart="@drawable/custom_check"
            android:fontFamily="@font/applesdgothicneob"
            android:gravity="center"
            android:paddingStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_txv"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/applesdgothicneob"
            android:includeFontPadding="false"
            android:text="@string/allAgree"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/allAgreeCheckBox"
            app:layout_constraintEnd_toEndOf="@id/allAgreeCheckBox"
            app:layout_constraintStart_toStartOf="@id/allAgreeCheckBox"
            app:layout_constraintTop_toTopOf="@id/allAgreeCheckBox" />

        <!--<View
            android:id="@+id/terms_of_use_container"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_8dp_graybox_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/allAgree_container" />-->

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/terms_of_use_checkbox"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_8dp_graybox_bg"
            android:drawableStart="@drawable/custom_check"
            android:drawablePadding="20dp"
            android:fontFamily="@font/applesdgothicneol"
            android:includeFontPadding="false"
            android:paddingStart="20dp"
            android:text="@string/termsOfUse"
            android:textColor="@color/defaultBlackTextColor"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/allAgreeCheckBox"
            tools:ignore="RtlSymmetry" />


        <ImageButton
            android:id="@+id/detail_termsOfUse_imb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:contentDescription="@string/detail"
            android:src="@drawable/ic_right_icon"
            app:layout_constraintBottom_toBottomOf="@id/terms_of_use_checkbox"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/terms_of_use_checkbox"
            app:layout_constraintTop_toTopOf="@id/terms_of_use_checkbox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/personalInformation_checkbox"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_8dp_graybox_bg"
            android:drawableStart="@drawable/custom_check"
            android:drawablePadding="20dp"
            android:fontFamily="@font/applesdgothicneol"
            android:includeFontPadding="false"
            android:paddingStart="20dp"
            android:text="@string/personal_information_title"
            android:textColor="@color/defaultBlackTextColor"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/terms_of_use_checkbox"
            tools:ignore="RtlSymmetry" />

        <ImageButton
            android:id="@+id/detail_personalInfo_imb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:contentDescription="@string/detail"
            android:src="@drawable/ic_right_icon"
            app:layout_constraintBottom_toBottomOf="@id/personalInformation_checkbox"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/personalInformation_checkbox"
            app:layout_constraintTop_toTopOf="@id/personalInformation_checkbox" />


        <Button
            android:id="@+id/gotoAuth_btn"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/gotoAuth"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personalInformation_checkbox"
            app:layout_constraintVertical_bias="0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>