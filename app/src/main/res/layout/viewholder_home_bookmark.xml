<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/round_8dp_edit_bg"
    >


    <TextView
        android:id="@+id/bookmark_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/defaultBlackTextColor"
        android:textSize="15sp"
        android:gravity="start"
        android:fontFamily="@font/applesdgothicneom"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="삼락공원 에리플1" />



    <TextView
        android:id="@+id/bookmark_state_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_full_green"
        android:gravity="center"
        android:paddingHorizontal="6dp"
        android:paddingVertical="4dp"
        tools:text="사용가능"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:fontFamily="@font/applesdgothicneob"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/second_guidLine"
        app:layout_constraintEnd_toEndOf="@id/second_guidLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/second_guidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"
        />

    <ImageButton
        android:id="@+id/deap_imb"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@null"
        android:contentDescription="@string/bookmark"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bookmark_state_txv"
        tools:ignore="TouchTargetSizeCheck"
        tools:src="@drawable/ic_empty_heart" />

</androidx.constraintlayout.widget.ConstraintLayout>