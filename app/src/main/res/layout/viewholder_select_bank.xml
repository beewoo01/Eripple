<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/round_8dp_graybox_bg">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="17dp" />

    <ImageView
        android:id="@+id/bank_icon_imv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@string/bank_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/start_guid"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/app_icon" />

    <TextView
        android:id="@+id/bank_name_txv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/applesdgothicneob"
        android:textSize="15sp"
        android:textColor="@color/defaultBlackTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/bank_icon_imv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="국민" />


</androidx.constraintlayout.widget.ConstraintLayout>