<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.eripple.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="android:title">@null</item>
    </style>

    <style name="Widget.eripple.Toolbar.WithArrow" parent="Widget.eripple.Toolbar">
        <item name="navigationIcon">@drawable/ic_back_icon</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Widget.eripple.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
        <item name="drawableSize">@drawable/custom_check</item>
    </style>

    <style name="Widget.eripple.MediumText" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/applesdgothicneom</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.eripple.Toolbar.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/defaultBlackTextColor</item>
        <item name="fontFamily">@font/applesdgothicneoeb</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.eripple.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/round_3dp_bg</item>
        <!--<item name="android:background">@drawable/bg_default_button</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/applesdgothicneob</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/defaultEditHintColor</item>
        <item name="android:textColor">@color/defaultEditHintColor</item>

    </style>


    <style name="Widget.eripple.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeColor">@color/stroke_filter_chip_state_list</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/bg_filter_chip_state_list</item>
        <item name="android:textColor">@color/text_filter_chip_state_list</item>
        <item name="fontFamily">@font/applesdgothicneob</item>
        <item name="android:textSize">13sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="textStartPadding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipIconTint">@color/icon_filter_chip_state_list_reset</item>
        <item name="chipIconSize">12dp</item>
        <item name="iconStartPadding">6dp</item>
        <item name="chipEndPadding">2dp</item>
        <item name="chipIconVisible">false</item>
        <item name="chipIconEnabled">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="Widget.eripple.Chip.TextView" parent="Widget.AppCompat.TextView">
        <item name="background">@drawable/bg_circle</item>
        <item name="android:textColor">@color/white</item>
    </style>

