<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Eripple" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="toolbarStyle">@style/Widget.eripple.Toolbar</item>
        <item name="toolbarWithArrowButtonStyle">@style/Widget.eripple.Toolbar.WithArrow</item>

        <!--textAppearanceHeadline6-->
        <item name="textAppearanceHeadline6">@color/defaultBlackTextColor</item>
        <item name="textAppearanceSubtitle1">@color/defaultBlackTextColor</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="checkboxStyle">@style/Widget.eripple.CheckBox</item>
        <item name="buttonStyle">@style/Widget.eripple.Button</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Text.Default.Normal" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="Text.Default.NormalBlack" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/defaultBlackTextColor</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Default.Bold" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>



</resources>